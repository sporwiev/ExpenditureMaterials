<UserControl x:Class="BifServiceExpenditureMaterials.Views.Pages.AnalitickPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Views.Pages"
             xmlns:controls="clr-namespace:BifServiceExpenditureMaterials.Controls"

             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">
                <TextBlock Text="Год"  VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Width="100" x:Name="ComboBoxYear">

                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">
                <TextBlock Text="Месяц"  VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Width="100" x:Name="ComboBoxMonth">

                </ComboBox>
            </StackPanel>
            <StackPanel  Orientation="Horizontal">
                <ComboBox Background="LightGray" Margin="0,0,10,0" x:Name="TypeProductComboBox" SelectionChanged="TypeProductComboBox_SelectionChanged">
                    <ComboBoxItem></ComboBoxItem>
                    <ComboBoxItem>Масло</ComboBoxItem>
                    <ComboBoxItem>Антифриз</ComboBoxItem>
                    <ComboBoxItem>Смазка</ComboBoxItem>
                    <ComboBoxItem>Фильтры</ComboBoxItem>
                </ComboBox>
                
                
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="typeproduct" Text="Масло" Margin="10" FontSize="25"/>
            <controls:Charts  x:Name="MyChart" />
            <TextBlock x:Name="sum"/>
        </StackPanel>
        
    </Grid>
</UserControl>
