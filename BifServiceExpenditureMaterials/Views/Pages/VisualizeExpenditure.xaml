<UserControl x:Class="BifServiceExpenditureMaterials.Views.Pages.VisualizeExpenditure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" PreviewMouseWheel="UserControl_PreviewMouseWheel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Margin="5" CornerRadius="10" Background="#C0C0C0" ClipToBounds="True" MouseLeftButtonDown="mainCanvas_MouseLeftButtonDown" MouseLeftButtonUp="mainCanvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove">
            <Canvas x:Name="mainCanvas" Width="1000" Height="1000"  >
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="CanvasScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="CanvasTranslate"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Button Width="200" Height="50"/>
            </Canvas>
        </Border>
        
    </Grid>
</UserControl>
