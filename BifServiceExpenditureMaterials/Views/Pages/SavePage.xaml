<UserControl x:Class="BifServiceExpenditureMaterials.Views.Pages.SavePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Views.Pages"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Border CornerRadius="20" Background="LightGray" Margin="10" Padding="10" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#C0C0C0" CornerRadius="20" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Загрузить или сохранить" FontSize="18" VerticalAlignment="Center"/>
                    <GridSplitter Grid.Row="1" Height="2" Background="#A9A9A9" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    <ScrollViewer Grid.Row="2" Margin="0,10,0,0">
                        <ListView Background="Transparent" x:Name="listfiles">
                        </ListView>
                    </ScrollViewer>
                    <GridSplitter Grid.Row="3" Height="2" Background="#A9A9A9" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    <Grid  Grid.Row="4" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ui:Button Content="Сохранить" CornerRadius="10" HorizontalAlignment="Stretch" Grid.Column="0" Click="Save_Click" />
                        <ui:Button Content="Загрузить" CornerRadius="10" HorizontalAlignment="Stretch" Grid.Column="2" Click="Download_Click"/>
                    </Grid>
                </Grid>
            </Border>
            <Border Background="#C0C0C0" CornerRadius="20" Grid.Column="2" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Отправить другому пользователю" FontSize="18" VerticalAlignment="Center"/>
                    <GridSplitter Grid.Row="1" Height="2" Background="#A9A9A9" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    <ScrollViewer Grid.Row="2" Margin="0,10,0,0">
                        <StackPanel x:Name="messagePanel"></StackPanel>
                    </ScrollViewer>
                    <TextBlock Text="Принятые файлы" Grid.Row="3" FontSize="18"/>
                    <ScrollViewer Grid.Row="4" Margin="0,10,0,0">
                        <StackPanel x:Name="responcePanel"></StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Row="5" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:Button VerticalAlignment="Stretch" Content="Отправить" Margin="0,0,10,0" CornerRadius="10"/>
                            <ComboBox SelectedIndex="0" Padding="10,4,10,4">
                                <ComboBoxItem Content="Андрей"/>
                                <ComboBoxItem Content="Ольга"/>
                                <ComboBoxItem Content="Антон"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
