<UserControl x:Class="BifServiceExpenditureMaterials.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Views.Pages"
             xmlns:controls="clr-namespace:BifServiceExpenditureMaterials.Controls"
             xmlns:vm="clr-namespace:BifServiceExpenditureMaterials.ViewModels.Pages"
             d:DataContext="{d:DesignInstance local:HomePage,
                                     IsDesignTimeCreatable=True}"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="monthButtons">
            
            <Setter Property="Template">
                <Setter.Value>


                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10,4" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border 
                        x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        CornerRadius="0,8,0,0"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                            x:Name="ContentSite"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            ContentSource="Header"
                            Margin="0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF28A745"/>
                                <!-- Зеленый фон -->
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF218838"/>
                                <!-- Темно-зелёная рамка -->
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#22007ACC"/>
                            <Setter Property="Foreground" Value="#FF007ACC"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="DarkGray"/>
                        </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WrapTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="ExcelCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="0"/>
            <!-- Убираем внутренние отступы -->
            <Setter Property="Margin" Value="0,-3,0,-2"/>
            <!-- Убираем внешние отступы -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0.5"/>

                </Trigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Column.DisplayIndex}" Value="0">
                    <Setter Property="Background" Value="Orange"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль заголовков как в Excel -->
        <Style x:Key="ExcelHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#D9EAD3"/>
            <!-- светло-зелёный -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="Transparent" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
                <StackPanel Margin="0,0,0,10">
                    <ui:InfoBar x:Name="infobar" Title="FSDFDSFDSF" Message="DSFSDFDSF" Opacity="0" IsClosable="False" IsOpen="True" Severity="Success"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ui:DropDownButton Grid.Column="0" Margin="5" Width="70" Height="40">
                        <ui:DropDownButton.Icon>
                            <ui:SymbolIcon Symbol="Smartwatch24" FontSize="20"/>
                        </ui:DropDownButton.Icon>
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>


                                <StackPanel Orientation="Horizontal"  >
                                    <TextBlock Text="Год" Margin="10,0,10,0" VerticalAlignment="Center"  />
                                    <ComboBox Background="LightGray" x:Name="YearComboBox" HorizontalAlignment="Right"  VerticalAlignment="Center" Padding="100,7,7,7" SelectionChanged="YearComboBox_SelectionChanged" />
                                </StackPanel>

                            </ContextMenu>

                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>

                    <ui:DropDownButton Grid.Column="2" Margin="5"  Width="70" Height="40">
                        <ui:DropDownButton.Icon>
                            <ui:SymbolIcon Symbol="Add24" FontSize="20"/>
                        </ui:DropDownButton.Icon>
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>

                                <Button Background="LightGray" Content="Добавить машину" Name="AddMachineBtn" Margin="10,0,0,0" Click="AddMachineBtn_Click" />

                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>
                    <ui:DropDownButton Grid.Column="3" Margin="5"  Width="70" Height="40">
                        <ui:DropDownButton.Icon>
                            <ui:SymbolIcon Symbol="DualScreenUpdate24" FontSize="20"/>
                        </ui:DropDownButton.Icon>
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>
                                <Button Background="LightGray" Content="Изменить машину" Name="UpdateMachineBtn" Margin="10,0,0,0" Click="UpdateMachineBtn_Click" Grid.Column="5"/>
                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>
                    <ui:DropDownButton Grid.Column="4" Margin="5"  Width="70" Height="40">
                        <ui:DropDownButton.Icon>
                            <ui:SymbolIcon Symbol="Filter24" FontSize="20"/>
                        </ui:DropDownButton.Icon>
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>
                                <GroupBox Header="Фильтр" Grid.Row="1" Grid.ColumnSpan="6">
                                    <StackPanel  Orientation="Horizontal">
                                        <ComboBox Background="LightGray" Margin="0,0,10,0" x:Name="TypeProductComboBox" SelectionChanged="TypeProductComboBox_SelectionChanged">
                                            <ComboBoxItem>Масло</ComboBoxItem>
                                            <ComboBoxItem>Антифриз</ComboBoxItem>
                                            <ComboBoxItem>Смазка</ComboBoxItem>
                                            <ComboBoxItem>Фильтры</ComboBoxItem>
                                        </ComboBox>
                                        <ComboBox Background="LightGray" x:Name="ProductComboBox" Margin="0,0,10,0" SelectionChanged="ProductComboBox_SelectionChanged">

                                        </ComboBox>
                                        <Button Content="Применить" Background="LightGray" Click="FilterSaveButton_Click" Margin="0,0,10,0"/>
                                        <Button Content="Обновить" Background="LightGray" Click="UpdateFillTable_Click"/>
                                    </StackPanel>
                                </GroupBox>
                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>
                    <StackPanel Orientation="Horizontal" Grid.Column="5"  Height="40">
                        <TextBlock Text="Поиск" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <ui:AutoSuggestBox Background="LightGray" x:Name="SearchTextBox" PlaceholderText="Поиск по машинам..." Width="220" Margin="10,0,0,0" Grid.Column="1"/>
                    </StackPanel>
                <Button Grid.Column="6" Content="Печать"  Padding="0" Height="40" Width="80" HorizontalAlignment="Center" Command="{Binding ViewModel.PrintButton_ClickCommand}"/>


            </Grid>



            </StackPanel>
            <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" x:Name="monthPanel">
                <Button Style="{DynamicResource monthButtons}" Background="BlueViolet" MouseEnter="Button_MouseEnter" Click="Button_Click">Январь</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Февраль</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Март</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Апрель</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Май</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Июнь</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Июль</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Август</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Сентябрь</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Октябрь</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Ноябрь</Button>
                <Button Style="{DynamicResource monthButtons}" MouseEnter="Button_MouseEnter" Click="Button_Click">Декабрь</Button>
            </StackPanel>

            <controls:MonthlyTable Grid.Row="1" x:Name="montableGl" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="300" ScrollViewer.CanContentScroll="True"/>
        </Grid>
