<UserControl x:Class="BifServiceExpenditureMaterials.Controls.DynamicCardElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Controls" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             d:DataApp.dBcontext="{d:DesignInstance local:DynamicCardElement,IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             Height="Auto" Width="500" Background="Transparent">
    <Border Padding="20" CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0" ColorInterpolationMode="ScRgbLinearInterpolation">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop x:Name="typebackgroundcolor" Offset="1"/>

            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="52" x:Name="panelMessage"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding TitleCard}" FontSize="30" Grid.RowSpan="2" FontWeight="Bold" Foreground="White"/>
            <Border CornerRadius="10" Grid.Row="2" Background="White" Opacity="0.6" Margin="10"/>


            <ScrollViewer Grid.Row="2" Margin="10" Padding="10">
                <StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBox Margin="0,0,3,0">Ответственный</TextBox>
                        <TextBox Text="{Binding Responsible}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBox Margin="0,0,3,0">Месяц</TextBox>
                        <TextBox Text="{Binding Month}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBox Margin="0,0,3,0">Год</TextBox>
                        <TextBox Text="{Binding Year}"/>
                    </StackPanel>
                    <Button Margin="5" Content="Перейти к ячейке" Click='Button_Click_1'/>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Height="400" Grid.Row="3">
                <ui:Button Grid.Row="3" HorizontalAlignment="Stretch" Opacity="0.7" Margin="10" Content="Сообщение" Click="Button_Click"/>
                <TextBlock Text="{Binding Message}" Margin="10"/>
            </StackPanel>
            
            
        </Grid>
    </Border>
</UserControl>
