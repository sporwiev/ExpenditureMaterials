<UserControl x:Class="BifServiceExpenditureMaterials.Controls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Controls"
             mc:Ignorable="d" 
             d:DataApp.dBcontext="{d:DesignInstance local:Card,IsDesignTimeCreatable=True}"
             Height="Auto" Width="Auto">
    <Border CornerRadius="10" Background="White" >
        <Border.Effect>
            <DropShadowEffect 
            Color="Gray" BlurRadius="10" ShadowDepth="0" />
        </Border.Effect>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Название" FontSize="20" Foreground="Black" FontWeight="Bold"  Grid.Row="0"/>
            <TextBlock x:Name="NameTextBox" Text="{Binding TitleCard}" TextWrapping="Wrap" TextElement.FontWeight="Bold"  Grid.Row="0" Grid.Column="2"/>
            <TextBlock Text="Дата" Margin="10,0,0,0" Foreground="Gray"  Grid.Row="1"/>
            <TextBlock x:Name="DateTextBox" Text ="{Binding Date}" TextElement.FontWeight="Bold"  Grid.Row="1" Grid.Column="2"/>
            <TextBlock Text="Количество" Margin="10,0,0,0" Foreground="Gray"  Grid.Row="2"/>
            <TextBlock x:Name="CountTextBox" Text="{Binding Count}" TextElement.FontWeight="Bold"  Grid.Row="2" Grid.Column="2"/>
            <TextBlock Text="Статус" Margin="10,0,0,0" Foreground="Gray"  Grid.Row="3"/>
            <TextBlock x:Name="StatusTextBox" Text="{Binding Status}" TextElement.FontWeight="Bold"  Grid.Row="3" Grid.Column="2"/>
        </Grid>
        
    </Border>
</UserControl>
