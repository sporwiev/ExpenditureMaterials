<UserControl x:Class="BifServiceExpenditureMaterials.Controls.PanelFilters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Controls"
             
             Width="Auto" Height="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель -->
        <Border x:Name="Panel"
                Background="Transparent"
                Height="70"
                Width="300"
                VerticalAlignment="Bottom"
                Grid.Row="1">
            <Border.RenderTransform>
                <TranslateTransform X="-375"/>
            </Border.RenderTransform>
            <ItemsControl  x:Name="ItemsHost">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            
        </Border>

        <!-- Кнопка -->
        <Button 
                Width="40"
                Height="40"
                Click="ToggleButton_Click"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                >
            <Image Source="pack://application:,,,/filter.png"/>
        </Button>
    </Grid>
</UserControl>
