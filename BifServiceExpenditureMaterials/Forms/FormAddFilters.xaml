        xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Forms"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="FormDol" Width="400" Height="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Фильтры" BorderThickness="3" BorderBrush="#9a9a9a">
            <StackPanel x:Name="glpan">
                
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <Button x:Name="SaveButton" Width="120" Margin="0,0,20,0" Click="SaveButton_Click">Записать</Button>
            <Button x:Name="CloseButton" Width="120" Click="CloseButton_Click">Закрыть</Button>
        </StackPanel>
    </Grid>
</Window>