<Window x:Class="BifServiceExpenditureMaterials.Forms.FormTO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BifServiceExpenditureMaterials.Forms"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="FormTO" Width="800" Height="800" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TitleBar
    x:Name="TitleBar"
    Title="Биф сервисы - Форма ТО"
    Grid.Row="0"
    CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/bificon.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <!-- ...оставшаяся часть без изменений до Grid.Row="1" -->

        <StackPanel Grid.Row="1">
            <GroupBox  Header="ТО" BorderThickness="3" BorderBrush="#9a9a9a">
                <StackPanel>
                    <Grid x:Name="groupBox">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Масло -->
                        <GroupBox Header="Масло" BorderThickness="3" BorderBrush="#9a9a9a">
                            <StackPanel>
                                <Button Content="Добавить" Background="Gray" HorizontalAlignment="Stretch" Margin="5" Click="AddOilButton_Click"/>
                                <ScrollViewer VerticalScrollBarVisibility="Visible" Height="150" >
                                    <StackPanel Orientation="Horizontal" >
                                        <StackPanel Margin="5" x:Name="panelOil" Width="170"></StackPanel>
                                        <StackPanel Margin="5" x:Name="panelDelOil" Width="42"></StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </GroupBox>

                        <!-- Антифриз -->
                        <GroupBox Header="Антифриз" Grid.Column="1" BorderThickness="3" BorderBrush="#9a9a9a">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Цвет</TextBlock>
                                    <ComboBox x:Name="AntifreezeColorComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Марка</TextBlock>
                                    <ComboBox x:Name="AntifreezeBrandComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Тип</TextBlock>
                                    <ComboBox x:Name="AntifreezeTypeComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Литры</TextBlock>
                                    <ui:TextBox x:Name="AntifreezeLitersTextBox" PlaceholderText="50" Background="LightGray" Width="140"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Смазка -->
                        <GroupBox Header="Смазка" Grid.Column="2" BorderThickness="3" BorderBrush="#9a9a9a">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Марка</TextBlock>
                                    <ComboBox x:Name="GreaseBrandComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Тип</TextBlock>
                                    <ComboBox x:Name="GreaseTypeComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Вязкость</TextBlock>
                                    <ComboBox x:Name="GreaseViscosityComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Кол-во</TextBlock>
                                    <ui:TextBox x:Name="GreaseAmountTextBox" Background="LightGray"  PlaceholderText="50" Width="140"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Фильтр -->
                        <GroupBox Header="Фильтр" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="3" BorderBrush="#9a9a9a">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button x:Name="SelectFilterButton" Background="LightGray" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Content="Выбрать" VerticalAlignment="Top" Margin="5" Click="SelectFilterButton_Click"/>
                                <ui:ListView x:Name="FilterListViewName" Margin="1" Grid.Row="1"/>
                                <ui:ListView x:Name="FilterListViewCount" Margin="1" Grid.Row="1" Grid.Column="1"/>
                            </Grid>
                        </GroupBox>

                        <!-- Другое и Мотор -->
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <GroupBox Header="Другое" BorderThickness="3" BorderBrush="#9a9a9a">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Мото-часы</TextBlock>
                                        <ui:TextBox x:Name="MotoHoursTextBox" Background="LightGray" PlaceholderText="50" Width="140"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Пробег</TextBlock>
                                        <ui:TextBox x:Name="MileageTextBox" PlaceholderText="50" Background="LightGray" Width="140"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Мотор(ы)" BorderThickness="3" BorderBrush="#9a9a9a">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Margin="20,0,10,0" Width="70" VerticalAlignment="Center">Тип</TextBlock>
                                    <ComboBox x:Name="MotorTypeComboBox" Background="LightGray" Width="140"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>

                        <!-- Ответственность -->
                        
                    </Grid>
                    <Grid>
                        <GroupBox Header="Ответственность" Grid.Column="0" Grid.Row="2"  Grid.ColumnSpan="3" BorderThickness="3" BorderBrush="#9a9a9a">

                            <StackPanel>
                                <Button Content="Добавить сотрудника"  Background="LightGray" x:Name="AddPersonBtn" Margin="10" Click="AddPersonBtn_Click"/>
                                <ScrollViewer VerticalScrollBarVisibility="Visible" Height="100" >
                                    <StackPanel x:Name="stackResponseble">
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock Margin="20,0,40,0"  VerticalAlignment="Center">Ответственный</TextBlock>
                                            <ComboBox x:Name="ResponsibleComboBox" Background="LightGray" Width="430"/>
                                        </StackPanel>


                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" Margin="5" x:Name="StackOption">
                <Button x:Name="SaveButton" Content="Записать" Margin="0,0,15,0" Width="120" Click="SaveButton_Click"/>
                <Button x:Name="CloseButton" Content="Закрыть" Width="120" Margin="0,0,15,0" Click="CloseButton_Click"/>
                <ui:Button x:Name="MessageButton" Content="Сообщение" Width="120" Click="MessageButton_Click"/>
                <ui:Flyout x:Name="flyout" Placement="Top" Content="Скопировано"/>
            </StackPanel>
        </StackPanel>

    </Grid>
    
</Window>
