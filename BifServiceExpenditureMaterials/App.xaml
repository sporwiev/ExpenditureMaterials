<Application
    x:Class="BifServiceExpenditureMaterials.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
    xmlns:tb="http://www.hardcodet.net/taskbar"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <tb:TaskbarIcon x:Key="TrayIcon"
                    IconSource="pack://application:,,,/bificon.ico"
                    ToolTipText="Расход материалов"
                    ContextMenu="{DynamicResource TrayMenu}" />
            <ContextMenu x:Key="TrayMenu">
                <MenuItem Header="Открыть" Click="MenuItemOpen_Click"/>
                <MenuItem Header="Выход" Click="MenuItemExit_Click"/>
            </ContextMenu>
            <ResourceDictionary.MergedDictionaries>
                
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
